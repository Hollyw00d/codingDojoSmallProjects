<!doctype>
<html>
<head>
  <meta charset="utf-8" />
  <title>All Users</title>
  <link rel="stylesheet" type="text/css" href="css/styles.css" />
</head>
<body>

<div id="wrapper">

    <h1>All Users</h1>

    <ul>
        <% @users.reverse.each do |u| %>
            <li><a href="/users/<%= u.id %>"><%= u.first_name %> <%= u.last_name %></a></li>
        <% end %>
    </ul>

    <p class="important"><a href="/users/new">&raquo; Add New User</a></p>

      <form action="/logout" method="post">
        <p>
          <input type="submit" value="Log Out" />
        </p>
      </form>

</div><!-- #wrapper -->

</body>
</html>