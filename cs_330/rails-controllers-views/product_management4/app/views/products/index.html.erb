<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @products.reverse_each do |p| %>
        <tr>
            <td><%= p.name %></td>
            <td><%= p.description %></td>
            <td><%= p.price %></td>
            <!-- p.categories.name in Ruby isn't working -->
            <td><%= p.category.name %></td>
            <td>
              <a href="/products/<%= p.id %>">Show</a> |
              <a href="/products/<%= p.id %>/edit">Edit</a>
              <form action="#" method="post">
                <input type="hidden" />
                <input type="hidden" />
                <input type="submit" value="Delete" />
              </form>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<p><a href="/products/new">New Product</a></p>