<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.reverse_each do |u| %>
        <tr>
          <td><%= u.first_name %></td>
          <td><%= u.last_name %></td>
          <td><%= u.email %></td>
          <td><a href="/users/<%= u.id %>">Show</a> | <a href="/users/<%= u.id %>/edit">Edit</a></td>
        </tr>
    <% end %>
  </tbody>

</table>

<p><a href="/users/new">New User</a></p>